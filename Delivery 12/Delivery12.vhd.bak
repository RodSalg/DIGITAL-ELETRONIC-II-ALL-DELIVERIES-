library ieee;

entity Contador_Decrescente is
	port(
		clk: in bit;
		aset: in bit;
		q: out integer range 15 downto 0
	
	);
	
end entity Contador_Decrescente;

architecture contador_Decrescente_Arch of contador_Decrescente is
begin
	process(clk, aset)
		variable
	begin
		if (aset = '1') then
			q_buf := 15;
		else
			if clk' event and (clk = '1') then
				if (q_buf = 0) then
					q_buf := 15;
				else
					q_buf := q_buf -1;
				end if
			end if
		enf if
		q <= q_buf;
	end process;
end architecture contador_Decrescente_Arch;